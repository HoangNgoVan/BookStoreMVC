@model List<Product>
@{
    ViewData["Title"] = "Home Page";
    ViewData["HonePage"] = true;
}

<div style="background-color: #08618d;">
    <div class="container text-white py-5">
        <div class="row align-items-center g-5">
            <div class="col-md-6">
                <h1 class="mb-5 display-2"><strong>Book Store of University of Law</strong></h1>
                <p>
                    Tổng hợp bộ giáo trình luật của Trường Đại học Luật, ĐHQGHN.
                </p>
            </div>
            <div class="col-md-6 text-center">
                <img src="/images/background.png" class="img-fluid" alt="background" />
            </div>
        </div>
    </div>
</div>

<div class="bg-light">
    <div class="container py-4">
        <h2 class="pb-4 text-center">Các sản phầm mới nhất</h2>

        <div class="row mb-5 g-3">
            @foreach(var product in Model)
            {
                <div class="col-lg-3 col-md-6">
                    <div class="rounded border shadow p-3 text-center h-100">
                        <img src="/products/@product.ImageFileName" class="img-fluid" alt="..."
                             style="height: 180px; object-fit: contain"/>
                        <hr />
                        <h5 class="py-2">@product.BookName</h5>
                        <p>
                            Tác giả: @product.Author
                        </p>
                        <h4 class="mb-3">@(product.Price) VND</h4>
                        <a class="btn btn-primary btn-sm mb-2" href="#" role="button">Chi tiết</a>
                        <button type="button" class="btn btn-warning btn-sm mb-2">
                            Thêm vào <i class="bi bi-cart4"></i>
                        </button>

                    </div>
                </div>
            }
        </div>
    </div>
</div>