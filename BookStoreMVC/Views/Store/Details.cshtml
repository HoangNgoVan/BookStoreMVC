@model ProductsVm
@{
}


<div class="row">
    <div class="col-md-4 text-center">
        <img src="~/products/@Model.ImageFileName" class="img-fluid mb-3" alt="..." width="250" />
    </div>

    <div class="col-md-8">
        <h3 class="mb-3">@Model.BookName</h3>
        <h3 class="mb-3">@(Model.Price) VND</h3>
        <button type="button" class="btn btn-warning btn-sm mb-2">
            Thêm vào <i class="bi bi-cart4"></i>
        </button>

        <hr />

        <div class="row mb-3">
            <div class="col-sm-3 fw-bold">
                Nhà xuất bản:
            </div>
            <div class="col-sm-9">
                @Model.BrandName
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-sm-3 fw-bold">
                Danh mục:
            </div>
            <div class="col-sm-9">
                @Model.CategoryName
            </div>
        </div>


        <div class="fw-bold">Giới thiệu: </div>
        <div style="white-space: pre-line"> @Html.Raw(@Model.Description) </div>
    </div>
</div>



             